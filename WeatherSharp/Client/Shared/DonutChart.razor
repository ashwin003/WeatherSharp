<div class="item" title="@Value">
    <h6>@Name</h6>
    <svg width="160" height="160" xmlns="http://www.w3.org/2000/svg">
        <g>
            <title>@Name</title>
            <circle r="@Radius" cy="@Position" cx="@Position" stroke-width="@StrokeWidth" stroke="#f2f2f2" fill="none" />
            @if(FilledStroke > 0) {
                 <circle class="circle_animation" r="@Radius" cy="@Position" cx="@Position" stroke-width="@StrokeWidth" stroke="@StrokeColor" fill="none" stroke-dasharray="@FilledStroke" stroke-dashoffset="0" />
            }
        </g>
    </svg>
</div>

<style>
    .item {
        position: relative;
        float: left;
    }

    .item h6 {
        text-align:center;
        position: absolute;
        line-height: 160px;
        width: 100%;
    }

    svg {
        -webkit-transform: rotate(-90deg);
        transform: rotate(-90deg);
    }

    .circle_animation {
        -webkit-animation: css 1s ease-out forwards;
        animation: css 1s ease-out forwards;
    }
</style>